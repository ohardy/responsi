  @media only screen

    .row .column,
    .row .columns
      grid-column($columns:false)

    for $i in 1..$grid-total-columns
      .row .small-{$i}
        grid-column($columns:$i)

    for $i in 1..($grid-total-columns - 2)
      .row .small-offset-{$i}
        grid-column($offset:$i)

